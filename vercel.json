{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "crons": [
    {
      "path": "/api/schwab/syncusers",
      "schedule": "30 20 * * 1-5"
    }
  ],
  "rewrites": [
    {
      "source": "/api/mexc-futures/:path*",
      "destination": "/api/mexc-futures"
    },
    {
      "source": "/api/mexc-spot/:path*",
      "destination": "/api/mexc-spot"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ]
}