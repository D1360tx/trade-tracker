{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "crons": [
    {
      "path": "/api/cron/sync-all-users",
      "schedule": "31 13 * * 1",
      "description": "Monday 8:31 AM EST (13:31 UTC)"
    },
    {
      "path": "/api/cron/sync-all-users",
      "schedule": "0 14-20 * * 1-5",
      "description": "Hourly 9 AM - 3 PM EST (14:00-20:00 UTC)"
    },
    {
      "path": "/api/cron/sync-all-users",
      "schedule": "30 20 * * 1-5",
      "description": "3:30 PM EST market close (20:30 UTC)"
    }
  ],
  "rewrites": [
    {
      "source": "/api/mexc-futures/:path*",
      "destination": "/api/mexc-futures"
    },
    {
      "source": "/api/mexc-spot/:path*",
      "destination": "/api/mexc-spot"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@5.5.16"
    }
  }
}